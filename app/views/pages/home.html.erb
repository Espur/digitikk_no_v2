<section id="contact">
    <div class="container">
        <div class="row contact-row">
            <h3 class="contact-title">Kontakt Digitikk</h3>
            <p>Du vil få svar fortløpende</p>
            <%= image_tag("left-logo-long-text.png", class: 'contact-logo') %>
            <div class="col-md-4 col-left">
                <%= form_for @contact, url: contact_pages_path do |f| %>
                    <div class="form-group">
                        <%= f.label :navn %>
                        <%= f.text_field :navn, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :epost %>
                        <%= f.email_field :epost, class: 'form-control' %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :comments %>
                        <%= f.text_area :comments, class: 'form-control' %>
